<%- include('../partials/html-head') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/albums/editAlb.css"/>
<%- include('../partials/nav') %>

<main>
  <h1> <%= title %> </h1>
  <% if (user) { %>
    <form class="edit-form" action="/albums/<%= album._id %>?_method=PUT" method="POST">
      <label>Title:<br>
        <input type="text" name="title" value="<%= album.title %>" 
        autocomplete="off">
      </label>
      <label>Artist:<br>
        <input type="text" name="artist" value="<%= album.artist %>" 
        autocomplete="off">
      </label>
      <label>Release Year:<br>
        <input type="'text" name="year" value="<%= album.year %>" 
        autocomplete="off"
      >
      </label>
      <label>Record Label:<br>
        <input type="text" name="recordLabel" value="<%= album.recordLabel %>">
      </label>
      <label>Favorite Song:<br>
        <input type="text" name="favTrack" value="<%= album.favTrack %>" 
        autocomplete="off">
      </label>
      <div><button id="album-btn" type="submit">UpBeat</button></div>
    </form><br><br>

    
    <% } %>
  </main>




